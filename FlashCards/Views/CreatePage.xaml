<Page
    x:Class="FlashCards.Views.CreatePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:l="using:WinUI3Localizer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="ContentArea">
        <StackPanel>
            <SelectorBar>
                <SelectorBarItem
                    l:Uids.Uid="Create_SelectorBar_Front"
                    IsSelected="True"
                    Style="{StaticResource SubtitleSelectorBarItemStyle}"/>
                <SelectorBarItem l:Uids.Uid="Create_SelectorBar_Back" Style="{StaticResource SubtitleSelectorBarItemStyle}"/>
            </SelectorBar>

            <RelativePanel Margin="0,20,0,0">
                <DropDownButton
                    x:Name="Subject_Selection"
                    Margin="0,0,8,0"
                    Content="Fach: Mathe"
                    RelativePanel.AlignLeftWithPanel="True">
                    <DropDownButton.Flyout>
                        <MenuFlyout Placement="Bottom">
                            <MenuFlyoutItem Text="Mathe"/>
                            <MenuFlyoutItem Text="Deutsch"/>
                            <MenuFlyoutItem Text="Englisch"/>
                        </MenuFlyout>
                    </DropDownButton.Flyout>
                </DropDownButton>

                <DropDownButton
                    x:Name="Semester_Selection"
                    Margin="0,0,8,0"
                    Content="Semester: 1"
                    RelativePanel.RightOf="Subject_Selection">
                    <DropDownButton.Flyout>
                        <MenuFlyout Placement="Bottom">
                            <MenuFlyoutItem Text="1. Semester"/>
                            <MenuFlyoutItem Text="2. Semester"/>
                            <MenuFlyoutItem Text="3. Semester"/>
                        </MenuFlyout>
                    </DropDownButton.Flyout>
                </DropDownButton>

                <DropDownButton
                    x:Name="Tag_Selection"
                    Content="Tags auswählen"
                    RelativePanel.RightOf="Semester_Selection">
                    <DropDownButton.Flyout>
                        <MenuFlyout Placement="Bottom">
                            <MenuFlyoutItem Text="Mein Tag 1"/>
                            <MenuFlyoutItem Text="Mein Tag 2"/>
                            <MenuFlyoutItem Text="Mein Tag 3"/>
                        </MenuFlyout>
                    </DropDownButton.Flyout>
                </DropDownButton>

                <ComboBox
                    x:Name="Font_Selection"
                    Margin="0,0,8,0"
                    RelativePanel.LeftOf="FontSize_Selection"
                    SelectedIndex="0">
                    <ComboBox.Items>
                        <ComboBoxItem Content="Calibri"/>
                        <ComboBoxItem Content="Arial"/>
                    </ComboBox.Items>
                </ComboBox>

                <ComboBox
                    x:Name="FontSize_Selection"
                    Margin="0,0,8,0"
                    RelativePanel.LeftOf="FontBold_Button"
                    SelectedIndex="1">
                    <ComboBox.Items>
                        <ComboBoxItem Content="10"/>
                        <ComboBoxItem Content="14"/>
                    </ComboBox.Items>
                </ComboBox>

                <ToggleButton
                    x:Name="FontBold_Button"
                    Margin="0,0,8,0"
                    RelativePanel.LeftOf="FontUnderlined_Button">
                    <FontIcon FontSize="18" Glyph="&#xE8DD;"/>
                </ToggleButton>

                <ToggleButton
                    x:Name="FontUnderlined_Button"
                    Margin="0,0,8,0"
                    RelativePanel.LeftOf="FontItalic_Button">
                    <FontIcon FontSize="18" Glyph="&#xE8DC;"/>
                </ToggleButton>

                <ToggleButton
                    x:Name="FontItalic_Button"
                    Margin="0,0,8,0"
                    RelativePanel.LeftOf="FontColor_Selection">
                    <FontIcon FontSize="18" Glyph="&#xE8DB;"/>
                </ToggleButton>

                <ComboBox
                    x:Name="FontColor_Selection"
                    RelativePanel.AlignRightWithPanel="True"
                    SelectedIndex="0">
                    <ComboBox.Items>
                        <ComboBoxItem Content="Black"/>
                        <ComboBoxItem Content="White"/>
                    </ComboBox.Items>
                </ComboBox>
            </RelativePanel>

            <RichEditBox Height="1050" Margin="0,12"/>

            <RelativePanel>
                <DropDownButton Content="Layout auswählen: Text" RelativePanel.AlignLeftWithPanel="True">
                    <DropDownButton.Flyout>
                        <MenuFlyout Placement="Bottom">
                            <MenuFlyoutItem Text="Text"/>
                            <MenuFlyoutItem Text="Datei"/>
                            <MenuFlyoutItem Text="Text - Text"/>
                            <MenuFlyoutItem Text="Datei - Datei"/>
                            <MenuFlyoutItem Text="Text - Datei"/>
                            <MenuFlyoutItem Text="Datei - Text"/>
                            <MenuFlyoutItem Text="Text - Datei - Datei"/>
                        </MenuFlyout>
                    </DropDownButton.Flyout>
                </DropDownButton>

                <CheckBox Content="Stichpunkte einzeln einblenden" RelativePanel.AlignHorizontalCenterWithPanel="True"/>

                <Button
                    Content="Speichern"
                    IsEnabled="True"
                    RelativePanel.AlignRightWithPanel="True"
                    Style="{StaticResource AccentButtonStyle}"/>
            </RelativePanel>
        </StackPanel>
    </Grid>
</Page>
