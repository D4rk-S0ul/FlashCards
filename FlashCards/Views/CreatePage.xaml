<Page
    x:Class="FlashCards.Views.CreatePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:l="using:WinUI3Localizer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="ContentArea">
        <SelectorBar>
            <SelectorBarItem
                l:Uids.Uid="Create_SelectorBar_Front"
                IsSelected="True"
                Style="{StaticResource SubtitleSelectorBarItemStyle}"/>
            <SelectorBarItem l:Uids.Uid="Create_SelectorBar_Back" Style="{StaticResource SubtitleSelectorBarItemStyle}"/>
        </SelectorBar>
        <StackPanel Orientation="Horizontal" Spacing="{StaticResource UIControlSpacing}">
            <DropDownButton Content="Fach: Mathe">
                <DropDownButton.Flyout>
                    <MenuFlyout Placement="Bottom">
                        <MenuFlyoutItem Text="Mathe"/>
                        <MenuFlyoutItem Text="Deutsch"/>
                        <MenuFlyoutItem Text="Englisch"/>
                    </MenuFlyout>
                </DropDownButton.Flyout>
            </DropDownButton>
            <DropDownButton Content="Semester: 1">
                <DropDownButton.Flyout>
                    <MenuFlyout Placement="Bottom">
                        <MenuFlyoutItem Text="1. Semester"/>
                        <MenuFlyoutItem Text="2. Semester"/>
                        <MenuFlyoutItem Text="3. Semester"/>
                    </MenuFlyout>
                </DropDownButton.Flyout>
            </DropDownButton>
            <DropDownButton Content="Tags auswählen">
                <DropDownButton.Flyout>
                    <MenuFlyout Placement="Bottom">
                        <MenuFlyoutItem Text="Mein Tag 1"/>
                        <MenuFlyoutItem Text="Mein Tag 2"/>
                        <MenuFlyoutItem Text="Mein Tag 3"/>
                    </MenuFlyout>
                </DropDownButton.Flyout>
            </DropDownButton>
        </StackPanel>
    </Grid>
</Page>
